name: 电信免流请求体获取
desc: 开启脚本以及mitm等开关，配合电信免流使用

http:
  mitm:
    - czapp.bestpay.com.cn
  script:
    - match: ^https?:\/\/czapp\.bestpay\.com\.cn
      name: Telecom_BD
      type: request
      require-body: true
      timeout: 120


script-providers:
  Telecom_BD:
    url: https://raw.githubusercontent.com/QGCliveDavis/Module/main/TeleV2.0/BD1000.js
    interval: 86400
